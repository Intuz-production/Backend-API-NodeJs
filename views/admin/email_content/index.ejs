<% include ../newheader %>

  <% title = 'Email Template' %>
    <!--<% sub_title = 'Artist List' %>-->

    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
      <!-- Content Header (Page header) -->
      <section class="content-header">
        <h1>
          <%= title %>
        </h1>
        <ol class="breadcrumb">
          <li>
            <a href="/admin/dashboard">
              <i class="fa fa-dashboard"></i>Dashboard</a>
          </li>
          <li class="active">
            <%= title %>
          </li>
        </ol>
      </section>

      <!-- Main content -->
      <section class="content">        
        <div class="row">
          <div class="col-xs-12">
            <div class="box">
              <div class="box-header">
                <a href="index" title="refresh">
                  <i class="fa fa-refresh page_refresh_icon"></i>
                </a>
                <!--<h3 class="box-title"><%= sub_title %></h3>-->
                <!-- <a href="create" class="btn btn-success create_new_button" >Add New</a> -->

              </div>
              <!-- /.box-header -->
              <div class="box-body">

                <table id="users-table" class="table table-bordered table-striped">
                  <thead>
                    <tr>
                      <th>Email Key</th>
                      <th>Email Subject</th>
                      <th>Email Content</th>
                      <th>Action</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% if(datalist.length > 0){ %>
                      <% datalist.forEach(function(data, key){ %>
                        <tr>
                          <td>
                            <%= data.emailtemplate_name %>
                          </td>
                          <td>
                            <%= data.emailtemplate_subject %>
                          </td>
                          <td>
                            <%= wrapContent(data.emailtemplate_body) %>
                          </td>
                          <td>

                            <a class="useraccess_update" href="/admin/<%= controller %>/update?id=<%=data.emailtemplate_id%>" style="cursor:pointer;">
                              <i class="fa fa-pencil "></i>
                            </a>

                          </td>
                        </tr>
                        <% }); %>
                          <% }else{ %>
                            <tr>
                              <td colspan="2">No data found</td>
                            </tr>
                            <% } %>
                  </tbody>
                </table>
              </div>
              <!-- /.box-body -->
            </div>
            <!-- /.box -->
          </div>
          <!-- /.col -->
        </div>
        <!-- /.row -->
      </section>
      <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->

    <%
    function wrapContent(text) {
      if(text.length > 110){
        return text.slice(0, 100) + " ...";
      }
      else{
        return text;
      }
    }
    %>

    <% include ../new_footer %>