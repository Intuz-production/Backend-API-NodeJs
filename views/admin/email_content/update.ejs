<% include ../newheader %>
    <% title = 'Email Template' %>
        <% sub_title = 'Update Email Content' %>

            <!-- Content Wrapper. Contains page content -->
            <div class="content-wrapper">
                <!-- Content Header (Page header) -->
                <section class="content-header">
                    <h1>
                        <%= sub_title %>
                    </h1>
                    <ol class="breadcrumb">
                        <li>
                            <a href="/admin/dashboard">
                                <i class="fa fa-dashboard"></i> Dashboard</a>
                        </li>
                        <li>
                            <a href="/admin/email-content/index">
                                </i>
                                <%= title %>
                            </a>
                        </li>
                        <li class="active">
                            <%= sub_title %>
                        </li>
                    </ol>
                </section>

                <section class="content">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="box box-primary">
                                <div class="box-header with-border">
                                    <!--<h3 class="box-title"><%= sub_title %></h3>-->
                                </div>

                                <form action="/admin/email-content/save" enctype="multipart/form-data" method="post" role="form" data-toggle="validator"
                                    autocomplete="off">

                                    <div class="box-body">
                                        <div class="row">
                                            <div class="col-md-12">
                                                <div class="form-group">
                                                    <label for="title">Key
                                                        <span class="required">*</span>
                                                    </label>
                                                    <!-- /.box-header -->
                                                    <div class="box-body pad">
                                                        <input type="text" value="<%= model.emailtemplate_name %>" name="name" style="width: 100%; font-size: 14px; line-height: 18px; border: 1px solid #dddddd; padding: 10px;"
                                                            readonly>
                                                    </div>
                                                    <div class="help-block with-errors"></div>
                                                </div>
                                            </div>
                                            <div class="col-md-12">
                                                <div class="form-group">
                                                    <label for="title">Subject
                                                        <span class="required">*</span>
                                                    </label>
                                                    <!-- /.box-header -->
                                                    <div class="box-body pad">
                                                        <input type="text" value="<%= model.emailtemplate_subject %>" placeholder="Email Subject" name="subject" style="width: 100%; font-size: 14px; line-height: 18px; border: 1px solid #dddddd; padding: 10px;"
                                                            required>
                                                    </div>
                                                    <div class="help-block with-errors"></div>
                                                </div>
                                            </div>
                                            <div class="col-md-12">
                                                <div class="form-group">
                                                    <div class="box text_editor">
                                                        <label for="title">Content
                                                            <span class="required">*</span>
                                                        </label>
                                                        <!-- /.box-header -->
                                                        <div class="box-body pad">
                                                            <textarea class="textarea" required placeholder="Place some text here" name="content" style="width: 100%; height: 200px; font-size: 14px; line-height: 18px; border: 1px solid #dddddd; padding: 10px;"
                                                                required><%= model.emailtemplate_body %></textarea>
                                                        </div>
                                                    </div>
                                                    <div class="help-block with-errors"></div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <!-- /.box-body -->
                                    <input type="hidden" name="id" value="<%=model.emailtemplate_id %>" />
                                    <div class="box-footer">
                                        <button type="submit" class="btn btn-primary">Update</button>
                                        <a href="index" class="btn btn-danger">Cancel</a>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                    <!-- /.row -->
                </section>

            </div>
            <!-- /.content-wrapper -->


            <% include ../new_footer %>
                <script>
                    $(function () {
                        //bootstrap WYSIHTML5 - text editor
                        $('.textarea').wysihtml5()
                    })
                </script>