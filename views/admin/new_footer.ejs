  $(document).ready(function () {

    var url = window.location.pathname;
    // var segements = url.split('/');
    // var action_path = '/' + segements[1] + '/' + segements[2];

    $.ajax({
      url: "/admin/site/user-access",
      method: "post",
      data: { "url": url },
      success: function (result) {
        if (result.status == 1) {
          var access = result.permission;

          if (access.is_add != '1') {
            $('.create_new_button').remove();
          }

          if (access.is_update != 1) {
            $('.useraccess_update').remove();
          }

          if (access.is_delete != 1) {
            $('.useraccess_delete').remove();
          }

          if (access.is_publish != '1') {
            $('.useraccess_active-dective').remove();
          }

        }
      }
    });
  });


  function checkExists(value, type) {
    var data;
    if (type == 'email') {
      data = { "email": value }
    }
    if (type == 'phone') {
      data = { "phone": value }
    }
    $.ajax({
      url: "/admin/user/check-exists",
      method: "post",
      data: data,
      success: function (result) {
        if (result.status == 0) {
          $("input[name='" + type + "']").parent('div').addClass("has-error has-danger");
          $("input[name='" + type + "']").siblings('div').html(result.message);
        }
      }
    });
  }

