              $('.alert-success').fadeOut();
            }, 2000);
          }
          else {
            var messages = data.message;
            $('.content .box').prepend('<div class="alert alert-danger" style= "margin-top: 5px;">' + messages + '</div>');
            setTimeout(function () {
              $('.alert-danger').fadeOut();
            }, 2000);
          }
        }
      });
    }
  }
</script>

