<script>
  function Activedeactive(id, status, controller) {
    $.ajax({
      url: "/admin/" + controller + "/activedeactive",
      method: "post",
      datatype: "html",
      data: { "id": id, "status": status },
      success: function (data) {
        if (data.status == 1) {
          var table = $('#users-table').DataTable();
          table.clear().draw();
          if (controller == "user") {
            var messages = status == "1" ? "User activated successfully" : "User deactivated successfully";
          }
          else {
            var messages = status == "1" ? "Activated successfully" : "Deactivated successfully";
          }
          $('.content .box').prepend('<div class="alert alert-success" style= "margin-top: 5px;">' + messages + '</div>');
          setTimeout(function () {
            $('.alert-success').fadeOut();
          }, 2000);
        }
        else {
          var messages = data.message;
          $('.content .box').prepend('<div class="alert alert-danger" style= "margin-top: 5px;">' + messages + '</div>');
          setTimeout(function () {
            $('.alert-danger').fadeOut();
          }, 2000);
        }
      }
    });
  }

