        success: function (data) {
          if (data.status == 1) {
            var $result = $(data).find('.box-body');
            var table = $('#users-table').DataTable();
            table.clear().draw();
            var messages = "User deleted successfully";
            $('.content .box').prepend('<div class="alert alert-success" style= "margin-top: 5px;">' + messages + '</div>');
