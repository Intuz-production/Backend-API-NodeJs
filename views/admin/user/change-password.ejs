<% include ../newheader %>
<% title = 'App Users' %>
<% sub_title = 'Change Password' %>

<!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>
          App Users
      </h1>
      <ol class="breadcrumb">
        <li><a href="/admin/dashboard"><i class="fa fa-dashboard"></i> Dashboard</a></li>
        <li><a href="/admin/user/index"><i class="fa fa-dashboard"></i><%= title %></a></li>
        <li class="active"><%= sub_title %></li>
      </ol>
    </section>
    
    <section class="content">
      <div class="row">
        <div class="col-md-12">
          <div class="box box-primary">
            <div class="box-header with-border">
              <h3 class="box-title"><%= sub_title %></h3>
            </div>
              
            <form action="/admin/user/change-password" enctype="multipart/form-data" method="post" role="form" data-toggle="validator" autocomplete="off">
                
              <div class="box-body">
                  
                  <div class="row">
                      <div class="col-md-6">
                          <div class="form-group">
                            <label for="password">Password<span class="required">*</span></label>
                            <input id="inputPassword" type="password" class="form-control" name="password" value="" required />
                            <div class="help-block with-errors"></div>
                          </div>
                      </div>
                      
                      <div class="col-md-6">
                          <div class="form-group">
                            <label for="repeat-password">Repeat Password<span class="required">*</span></label>
                            <input id="inputRepeatPassword" type="password" class="form-control" name="repeat-password" value="" data-match="#inputPassword" required />
                            <div class="help-block with-errors"></div>
                          </div>
                      </div>
                      
                  </div>
                  
                
              </div>
              <!-- /.box-body -->

              <input type="hidden" name="user_id" value="<%= user_id %>" />
              
              <div class="box-footer">
                <button type="submit" class="btn btn-primary">Save</button>
                <a href="index" class="btn btn-danger" >Cancel</a>
              </div>
            </form>
          </div>
        </div>
      </div>
      <!-- /.row -->
    </section>
    
  </div>
  <!-- /.content-wrapper -->

<% include ../new_footer %>
  