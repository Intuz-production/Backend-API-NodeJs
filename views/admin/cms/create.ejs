<% include ../newheader %>
  <% title = 'CMS' %>
    <% sub_title = (isNewRecord) ? 'Create' : 'Update' %>

      <!-- Content Wrapper. Contains page content -->
      <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
          <h1>
            <%= sub_title %>
          </h1>
          <ol class="breadcrumb">
            <li>
              <a href="/admin/dashboard">
                <i class="fa fa-dashboard"></i> Dashboard</a>
            </li>
            <li>
              <a href="/admin/cms/index">
                </i>
                <%= title %>
              </a>
            </li>
            <li class="active">
              <%= sub_title %>
            </li>
          </ol>
        </section>

        <section class="content">
          <div class="row">
            <div class="col-md-12">
              <div class="box box-primary">
                <div class="box-header with-border">
                  <!--<h3 class="box-title"><%= sub_title %></h3>-->
                </div>

                <form action="/admin/cms/save" enctype="multipart/form-data" method="post" role="form" data-toggle="validator" autocomplete="off">

                  <div class="box-body">

                    <div class="row">

                      <div class="col-md-6">
                        <div class="form-group">
                          <label for="title">Title
                            <span class="required">*</span>
                          </label>
                          <input type="text" class="form-control" name="title" value="<%= (isNewRecord) ? '' : model.title  %>" required placeholder="Title"
                          />
                          <div class="help-block with-errors"></div>
                        </div>
                      </div>

                    </div>
                    <div class="row">
                      <div class="col-md-12">
                        <div class="form-group">
                          <div class="box text_editor">
                              <label for="title">Content
                                  <span class="required">*</span>
                                </label>
                            <!-- /.box-header -->
                            <div class="box-body pad">
                              <textarea class="textarea" required placeholder="Place some text here" name="content" style="width: 100%; height: 200px; font-size: 14px; line-height: 18px; border: 1px solid #dddddd; padding: 10px;">
                      <%= (isNewRecord) ? '' : model.content  %>   
             </textarea>
                            </div>
                          </div>
                          <div class="help-block with-errors"></div>
                        </div>
                      </div>
                    </div>


                  </div>
                  <!-- /.box-body -->
                  <input type="hidden" name="id" value="<%= (isNewRecord) ? 0 : model.id %>" />
                  <div class="box-footer">
                    <button type="submit" class="btn btn-primary">
                      <%= (isNewRecord) ? 'Create' : 'Update' %>
                    </button>
                    <a href="index" class="btn btn-danger">Cancel</a>
                  </div>
                </form>
              </div>
            </div>
          </div>
          <!-- /.row -->
        </section>

      </div>
      <!-- /.content-wrapper -->


      <% include ../new_footer %>
        <script>
          $(function () {
            //bootstrap WYSIHTML5 - text editor
            $('.textarea').wysihtml5()
          })
        </script>